{# part of this code is copied from or based off a cited source.  Please see readme for full citation #}

  <table>
    {% if data %}
      <tr>
        <th>Command Name</th>
        <th>Dog's Name</th>
      </tr>
      <tr>
                {% for item in data %}
        <tr>
          <!-- Then iterate through every key in the current item dictionary -->
                      {% for key in item.keys() %}

          <!-- Create a <td> element with the value of that key in it -->
          <td> {{item[key]}} </td>
                      {% endfor %}

        </tr>
                  {% endfor %}
          {% endif %}
      </tr>
    </table>
    <form class="form" id="insertCommandsLearned" action="/commandsLearned" method="post">
      <h2>Input New Command Learned:</h2>
      <select name="commandID" required>
      <option value=""> Command </option>
      {% for command in commandData %}
        <option id="commandID" required name="commandID" value={{command['commandID']}}>{{command['commandName']}}</option>
        {% endfor %}
</select>
<select name="dogID" required>
<option value=""> Dog Name </option>
      {% for dog in dogData %}
        <option id="dogID" required name="dogID" value={{dog['dogID']}}>{{dog['dogName']}}</option>
        {% endfor %}
</select>
      <button class="button" id=textButton id="Add CommandByDog" value="Add CommandByDog" name="Add CommandByDog">Submit</button>
    </form>
</body>
