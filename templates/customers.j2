  <table>
    {% if data %}
      <tr>
        <th>Customer ID</th>
        <th>Customer Name</th>
        <th>Alternate Name</th>
        <th>Phone Number</th>
        <th>Email Address</th>
        <th>Edit</th>
         <th>Delete</th>

      </tr>
      <tr>
        {% for item in data %}
        <tr>
          <!-- Then iterate through every key in the current item dictionary -->
                      {% for key in item.keys() %}

          <!-- Create a <td> element with the value of that key in it -->
          <td> {{item[key]}} </td>
                      {% endfor %}

                      <!-- Edit/delete buttons -->
          <td><a href="editCustomer/{{item.customerID}}" class="btn btn-default"><i class="fa fa-paw"></i></a></td>
          <td><a href="deleteCustomer/{{item.customerID}}" class="btn btn-default"><i class="fa fa-trash"></i></a></td>

        </tr>
                  {% endfor %}
          {% endif %}
      </tr>
    </table>
    <form class="form" id="insertCustomer" action="/customers" method="post">
      <h2>Input New Customer:</h2>
      <input type="text" id="customerName" name="customerName" required placeholder="Customer Name">
      <input type="text" id="altName" name = "altName" placeholder="Alternate Name">
      <input type="tel" id="phone" name = "phone" placeholder="Phone Number" required pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" title="XXX-XXX-XXXX" />
      <input type="email" id="email" name = "email" placeholder="Email">
      <button class="button" id=textButton id="Add Customer" value="Add Customer" name="Add Customer">Submit</button>
    </form>
</body>
