    <table>
      {% if data %}
        <tr>
          <th>Employee ID</th>
          <th>Employee's Name</th>
          <th>Employee's Title</th>
        </tr>
        <tr>
          {% for item in data %}
          <tr>
            <!-- Then iterate through every key in the current item dictionary -->
                        {% for key in item.keys() %}

            <!-- Create a <td> element with the value of that key in it -->
            <td> {{item[key]}} </td>
                        {% endfor %}

          </tr>
                    {% endfor %}
            {% endif %}
        </tr>
      </table>
      <form class="form" id="insertEmployee" action="/employees" method="post">
        <h2>Input New Employee:</h2>
        <input type="text" id="employeeName" name="employeeName" required placeholder="Employee Name">
        <input type="text" id="employeeType" name="employeeType" required placeholder="Employee Title">
        <button class="button" id=textButton id="Add Employee" value="Add Employee" name="Add Employee">Submit</button>
      </form>
